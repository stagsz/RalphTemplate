# Project
PROJECT_NAME=hazop

# Database (PostgreSQL)
DATABASE_URL=postgresql://hazop:devpassword@localhost:5432/hazop
DB_USER=hazop
DB_PASSWORD=devpassword
DB_NAME=hazop

# Redis (caching, sessions)
REDIS_URL=redis://localhost:6379/0

# MinIO (S3-compatible object storage for P&ID documents)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=hazop-documents
MINIO_USE_SSL=false

# RabbitMQ (message queue for async report generation)
RABBITMQ_URL=amqp://hazop:devpassword@localhost:5672
RABBITMQ_USER=hazop
RABBITMQ_PASSWORD=devpassword

# Auth (JWT)
JWT_SECRET=change-this-to-a-random-string-at-least-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Frontend env vars (Vite uses VITE_ prefix)
VITE_API_URL=http://localhost:4000

# App settings
NODE_ENV=development
PORT=4000
